{
  "comments": [
    "Wind data collected into a packet,"
  ],
  "config": [
    "[MQTTSubscribeService]",
    "    stop_on_validation_errors = true",
    "    # Configuration for the message callback.",
    "    [[message_callback]]",
    "    # The topics to subscribe to.",
    "    [[topics]]",
    "        unit_system = METRICWX",
    "        use_topic_as_fieldname = True",
    "        collect_wind_across_loops = False",    
    "        [[[weewx-$test_id/windDir]]]",
    "            name = windDir",
    "        [[[weewx-$test_id/windSpeed]]]",
    "            name = windSpeed"
  ],
  "testruns": [
    {
      "messages": [
        {
          "weewx-$test_id": {
            "separator": ",",
            "delimiter": "=",
            "data": {
              "windDir": 0,
              "windSpeed": 1
            }
          }
        }
      ],
      "results": [
        {
          "test": ["single", "driver"],
          "payloads": ["individual"],
          "units": 17,
          "records": [
            {
              "dateTime": null,
              "usUnits": 17,
              "windDir": 0,
              "windSpeed": 1
            }
          ]
        },
        {
          "test": ["accumulate"],
          "payloads": ["individual"],
          "units": 17,
          "records": [
            {
              "dateTime": null,
              "usUnits": 17,
              "windDir": 0,
              "windSpeed": 1,
              "windGustDir": 0,
              "windGust": 1              
            },
            {
            },
            {
            }
          ]
        },
        {
          "test": ["service"],
          "payloads": ["individual"],
          "units": 17,
          "records": [
            {
              "dateTime": null,
              "usUnits": 17,
              "windDir": 0,
