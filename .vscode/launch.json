            "console": "integratedTerminal"
        },
        {
            "name": "Service: Archive",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "simulate",
                "service",            
                "--binding", "archive",
                "--interval", "300",
                "--delay", "5",
                "--records", "1",
                "--verbose",
                //"--console",
                "${workspaceFolder}/devtools/smoketest.archive.conf"
