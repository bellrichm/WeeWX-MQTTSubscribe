            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "simulate",
                "driver",     
                "--binding", "archive",
                "--interval", "60",
                "--delay", "5",
                "--records", "1",
                "--verbose",
                //"--console",
                "${workspaceFolder}/devtools/smoketest.archive.conf"
            ],            
            "console": "integratedTerminal"
