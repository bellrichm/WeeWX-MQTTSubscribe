            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/user/MQTTSubscribe.py",
            "args": [
                "simulate",
                "service",
                "--binding", "loop",
                "--interval", "2",
                "--delay", "0",
                "--records", "1",
                //"--host", "localhost",
                //"--topics", "weather/rain",
