        {
            "name": "wee_config",
            "type": "python",
            "request": "launch",

            "program": "${workspaceFolder}/../weewx/bin/wee_config",
            "args": [
                "--verbosity", "3",
                //"--install", ".",
                "--reconfigure", "${workspaceFolder}/devtools/debug.loop.conf",
                "--driver=user.MQTTSubscribeDriver",
                "--output", "tmp/temp.conf",
                //"--no-prompt",
            ],            
            "console": "integratedTerminal"
        },        
        {
            "name": "Install",
            "type": "python",
            "request": "launch",

            "program": "${workspaceFolder}/../weewx/bin/wee_extension",
            "args": [
                "--verbosity", "3",
                "--dry-run",
                "--install", "."
            ],            
            "console": "integratedTerminal"
        },
        {
            "name": "Install: Service",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "service"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_extension",
            "args": [
                "--verbosity", "3",
                "--dry-run",
                "--install", "."
            ],            
            "console": "integratedTerminal"
        },        
        {
            "name": "Install: Driver",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "driver"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_extension",
            "args": [
                "--verbosity", "3",
                "--dry-run",
                "--install", "."
            ],            
            "console": "integratedTerminal"
        },
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "MQTTSubscribeDriverConfEditor: Driver",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "driver"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_config",
            "args": [
                "--output", "tmp/output.conf",
                "--no-backup",
                "--reconfigure",
                "${workspaceFolder}/devtools/debug.loop.conf",
               // "${workspaceFolder}/../weewx/weewx.debug.conf",
            ],            
            "console": "integratedTerminal"
        },
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "MQTTSubscribeDriverConfEditor: Service",
            "type": "python",
            "request": "launch",
            "env": {
                "MQTTSubscribe_install_type": "service"
            },
            "program": "${workspaceFolder}/../weewx/bin/wee_config",
            "args": [
                "--output", "/tmp/output.conf,",
                "--no-backup",
                "--reconfigure"
            ],            
            "console": "externalTerminal"
        },       
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "weewxd: Service",
            "type": "python",
            "request": "launch",
            "env": {
                "LANG": "en_GB.UTF-8"
            },
            "program": "${workspaceFolder}/../weewx/bin/weewxd",
            "args": [
                "weewx.service.conf"
            ],            
            "console": "externalTerminal"
        },   
        {
            // Requires MQTTSubscribe.py to be in 'weewx/bin/user' directory
            // Because python prepends the scripts directory, 'weewx/bin' to sys.path
            // So when weewx does an __import__('user') it uses 'weewx/bin/user'
            "name": "weewxd: Device",
            "type": "python",
            "request": "launch",
            "env": {
                "LANG": "en_GB.UTF-8"
            },
            "program": "${workspaceFolder}/../weewx/bin/weewxd",
            "args": [
                //"weewx.device.conf"
                "../weewx/weewx.conf"
